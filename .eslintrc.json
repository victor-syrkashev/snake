{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-plusplus": "off",
    "comma-dangle": "off",
    "import/extensions": "off",
    "import/prefer-default-export": "off",
    "operator-linebreak": "off",
    "no-lonely-if": "off",
    "wrap-iife": ["error", "inside"],
    "no-unused-expressions": ["error", { "allowTernary": true }],
    "no-restricted-syntax": "off",
    "guard-for-in": "off"
  }
}
